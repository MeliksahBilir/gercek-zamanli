<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d3b5b"
    tools:context="com.example.burak.gzs.Main2Activity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btn_fetch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="GETIR"
        app:layout_constraintEnd_toStartOf="@+id/btn_visual"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_data" />

    <Button
        android:id="@+id/btn_visual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="SICAKLIK"
        app:layout_constraintBottom_toTopOf="@+id/btn_database"
        app:layout_constraintEnd_toStartOf="@+id/btn_nemChart"
        app:layout_constraintStart_toEndOf="@+id/btn_fetch" />

    <Button
        android:id="@+id/btn_nemChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEM"
        app:layout_constraintBottom_toTopOf="@+id/btn_asilan"
        app:layout_constraintEnd_toStartOf="@+id/btn_gazChart"
        app:layout_constraintStart_toEndOf="@+id/btn_visual" />

    <Button
        android:id="@+id/btn_gazChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="GAZ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_nemChart" />

    <Button
        android:id="@+id/btn_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:text="VERITABANI"
        app:layout_constraintEnd_toEndOf="@+id/btn_visual"
        app:layout_constraintTop_toBottomOf="@+id/btn_fetch" />

    <Button
        android:id="@+id/btn_asilan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aşılan Değer"
        app:layout_constraintEnd_toEndOf="@+id/btn_gazChart"
        app:layout_constraintTop_toBottomOf="@+id/btn_gazChart" />

    <TextView
        android:id="@+id/txt_data"
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btn_gazChart"
        app:layout_constraintEnd_toEndOf="@+id/btn_visual"
        app:layout_constraintStart_toEndOf="@+id/btn_visual"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
